<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="myModalLabel">New Group</h3>

</div>
<div class="modal-body">
  <div id="errors_div">
  </div>
  <%= simple_form_for @group, remote: true  do |f| %>
    <%= f.input :name, label: "Please enter a new group name", hint: false, error: "You can't leave this empty." %>
    <div class="modal-footer">
      <%= f.submit "Create group", class: "btn btn-default btn-primary" %>
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
  <% end %>
</div>
